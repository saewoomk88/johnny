<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="qnaMapper">
	<select id="getNum" resultType="Integer">
		select qna_seq.nextval from dual
	</select>

	<select id="totalCount" parameterType="Pager" resultType="Integer">
		select count(num) from qna where
		<choose>
			<when test="kind=='contents'">
				contents
			</when>
			<when test="kind=='title'">
				title
			</when>
		</choose>
		like '%'||#{search}||'%'
	</select>
	
	<select id="list" parameterType="Pager" resultType="NoticeDTO">
		select * from
		(select rownum R, N.* from
		(select * from qna where
		<choose>
			<when test="kind=='contents'">contents</when>
			<when test="kind=='title'">title</when>
		</choose>
		like '%'||#{search}||'%'
		order by num desc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	
	<select id="select" parameterType="NoticeDTO" resultType="NoticeDTO">
		select * from qna where num=#{num}
	</select>
	
	<update id="replyUpdate">
		update qna set step=step+1 where ref=#{ref} and step>#{step}		
	</update>
	
	<insert id="reply">
		insert into qna values(
			qna_seq.nextval,
		)
		
	</insert>
	
	<insert id="insert" parameterType="NoticeDTO">
		insert into qna values(#{num}, #{title}, #{contents}, #{writer}, sysdate, 0)
	</insert>
	
	<update id="update" parameterType="NoticeDTO">
		update qna set title=#{title}, contents=#{contents} where num=#{num}
	</update>
	
	<delete id="delete" parameterType="Integer">
		delete qna where num=#{num}
	</delete>
	
</mapper>  